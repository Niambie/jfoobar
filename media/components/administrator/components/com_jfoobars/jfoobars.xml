<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7.0" method="upgrade">
	<name>Jfoobars</name>
	<creationDate>August 2011</creationDate>
	<copyright>Copyright (C) 2011 Amy Stephen. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Amy Stephen</author>
	<authorEmail>contribute@molajo.org</authorEmail>
	<authorUrl>http://Molajo.org</authorUrl>
	<version>1.0.0</version>
	<description>Jfoobars</description>

	<install> <!-- Runs on install -->
    	<sql>
        	<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
  		</sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
    	<sql>
        	<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
  		</sql>
   </uninstall>

	<files folder="site">
		<filename>jfoobars.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_jfoobars.ini
		</language>
	</languages>

	<media destination="com_jfoobars" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<administration>
		<menu>COM_JFOOBARS</menu>
		<files folder="administrator">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>jfoobars.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="administrator">
			<language tag="en-GB">language/en-GB.com_jfoobars.ini</language>
			<language tag="en-GB">language/en-GB.com_jfoobars.sys.ini</language>
		</languages>
	</administration>

</extension>

